<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Test Acceso Abogacía{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="{{ asset('img/portuetxe_logo.svg') }}">
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    <div class="container-fluid">
        <div id="login-view" class="row justify-content-center align-items-center">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <div class="row text-center">
                            <div class="col py-4">
                                <img class="logo-long" src="{{ asset('img/portuetxe_logo_long.svg') }}"
                                    alt="Test de acceso" width="33" height="25">
                                <br>
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col-12">
                                <p class="fs-4 mt-4 mb-2">¡Regístrate!</p>
                            </div>
                        </div>
                        <div class="row">
                            {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}
                            {{ form_errors(registrationForm) }}


                            {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
                            {{ form_row(registrationForm.agreeTerms) }}
                            <div class="row">
                                <div class="col">
                                    <a href="{{ path('app_login') }}" class="btn px-0">
                                        <i class="bi bi-chevron-left"></i>
                                        Volver inicio
                                    </a>
                                </div>
                                <div class="col">
                                    <button type="submit" class="btn btn-dark float-end">Register</button>
                                </div>
                            </div>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>