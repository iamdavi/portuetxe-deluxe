{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Inicio
{% endblock %}

{% block body %}

	<div class="row align-items-center">
		<div class="col">
			<h1>Últimos posts</h1>
		</div>
		<div class="col">
			<a href="{{ path('post_new') }}" class="btn btn-dark float-end">
				<i class="bi bi-plus-lg"></i>
				Nuevo post
			</a>
		</div>
	</div>
	<div class="row">
		{% include "components/modal/commentModal.html.twig" %}
		<div id="commentAddedPostWrapper" class="toast-container position-fixed bottom-0 end-0 p-3">
			<div id="commentAddedPost" class="toast text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
				<div class="toast-header">
					<strong class="me-auto">¡Commentario añadido correctamente!</strong>
					<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
				</div>
			</div>
		</div>
		<div class="vstack post-list">
			{% for post in posts %}
				{% include "components/post/homeListComponent.html.twig" %}
			{% endfor %}
		</div>
	</div>

{% endblock %}
